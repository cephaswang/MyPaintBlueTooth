<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <TextView
        android:id="@+id/title_left_text"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_weight="5"
        android:text="TextView" />

        <Button
            android:id="@+id/button_admin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/colorGray"
            android:onClick="btn_Master"
            android:text="RECEVICE" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_on"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="btn_On_Bluetooth"
            android:text="ON/OFF" />

        <Button
            android:id="@+id/button_visible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:visibility="visible"
            android:onClick="btn_On_Visibility"
            android:text="visible" />

        <Button
            android:id="@+id/button_action_found"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="btn_On_scan"
            android:text="SCAN" />

        <Button
            android:id="@+id/button_clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="btn_clear"
            android:text="Clear" />


    </LinearLayout>

    <ListView
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/lvNewDevices"/>


    <com.example.mypaint.PaintView
        android:id="@+id/paintView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:orientation="horizontal"
        >
        <Button
            android:id="@+id/buttonBack"
            android:layout_width="60sp"
            android:layout_height="match_parent"
            android:onClick="onBack"
            android:text="Undo" />

        <Button
            android:id="@+id/colorYellow"
            android:layout_width="30sp"
            android:layout_height="match_parent"
            android:onClick="onColorYellow"
            android:background="@color/colorYellow"
            />
        <Button
            android:id="@+id/colorRed"
            android:layout_width="30sp"
            android:layout_height="match_parent"
            android:onClick="onColorRed"
            android:background="@color/colorRed"
            />
        <Button
            android:id="@+id/colorBlue"
            android:layout_width="30sp"
            android:layout_height="match_parent"
            android:onClick="onColorBlue"
            android:background="@color/colorBlue"
            />

        <Button
            android:id="@+id/colorBlack"
            android:layout_width="30sp"
            android:layout_height="match_parent"
            android:onClick="onColorBlack"
            android:background="@color/colorBlack"
            />

        <SeekBar
            android:id="@+id/seekBar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2" />

    </LinearLayout>




</LinearLayout>